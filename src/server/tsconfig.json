{
    "compilerOptions": {
        "outDir": "../../dist",
        "module": "commonjs",
        "target": "es5",
        "lib": ["esnext", "dom", "dom.iterable"],
        "allowJs": true,
        "moduleResolution": "node",
        "rootDir": "../",
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "baseUrl": "../",
        "paths": {
            "test-data": ["./test/data"],
            "external-types": ["./types/types.external"]
        }
    },
    "types": ["typePatches"]
}

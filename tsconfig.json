{
    "compilerOptions": {
        "outDir": "dist",
        "module": "commonjs",
        "target": "es5",
        "lib": ["esnext", "dom", "dom.iterable"],
        "sourceMap": true,
        "allowJs": true,
        "jsx": "react",
        "moduleResolution": "node",
        "rootDir": "",
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "baseUrl": ".",
        "paths": {
            "test-data": ["./src/test/data"],
            "external-types": ["./src/types/types.external"],
            "internal-types": ["./src/types/types.internal"]
        }
    },
    "exclude": ["node_modules", "jest.config.js", "__mock-data__", "__mocks__", "e2e-tests", "dist"],
    "types": ["typePatches"]
}
